{
  "name": "music-visualizer",
  "version": "1.0.0",
  "description": "Psychedelic music visualization app with real-time audio analysis",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "start": "electron .",
    "build:renderer": "vite build",
    "build": "npm run build:renderer && electron-builder",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "build:linux": "npm run build:renderer && electron-builder --linux"
  },
  "keywords": [
    "music",
    "visualizer",
    "audio",
    "psychedelic",
    "webgl",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "three": "^0.182.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "vite": "^7.3.0",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.visualizer.music",
    "productName": "Music Visualizer",
    "directories": {
      "output": "build"
    },
    "files": [
      "src/main/**/*",
      "dist/renderer/**/*"
    ],
    "extraMetadata": {
      "main": "src/main/main.js"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  }
}
